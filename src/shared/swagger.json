{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Docs",
    "description": "Documentação da API.",
    "version": "1.0.0",
    "contact": {
      "email": "gabrielsmenezes99@gmail.com"
    }
  },
  "paths": {
    "/api/categories/create": {
      "post": {
        "tags": ["Categoria"],
        "summary": "Criar uma Categoria",
        "description": "Criar uma nova categoria.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description": "Utilitário esportivo"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Categoria criada.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Categoria já existe."
          }
        }
      }
    },
    "/api/categories/list": {
      "get": {
        "tags": ["Categoria"],
        "summary": "Listar todas as categorias.",
        "description": "Listar todas as suas categorias.",
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "categories": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "created_at": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "description": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
